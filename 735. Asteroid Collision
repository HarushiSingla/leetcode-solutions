import java.util.*;

class Solution {
    public int[] asteroidCollision(int[] asteroids) {
        ArrayList<Integer> st = new ArrayList<>();

        for (int i = 0; i < asteroids.length; i++) {
            int curr = asteroids[i];

            if (curr > 0) {
                st.add(curr);
            } else {
                while (!st.isEmpty() && st.get(st.size() - 1) > 0 && st.get(st.size() - 1) < Math.abs(curr)) {
                    st.remove(st.size() - 1);  // smaller right asteroid explodes
                }

                if (!st.isEmpty() && st.get(st.size() - 1) == -curr) {
                    st.remove(st.size() - 1);  // both explode
                } else if (st.isEmpty() || st.get(st.size() - 1) < 0) {
                    st.add(curr);  // no collision or left survives
                }
            }
        }

        // Convert ArrayList to array
        int[] result = new int[st.size()];
        for (int i = 0; i < st.size(); i++) {
            result[i] = st.get(i);
        }

        return result;
    }
}
